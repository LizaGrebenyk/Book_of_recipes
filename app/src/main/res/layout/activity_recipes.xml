<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recipes"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/cat1">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
            android:id="@+id/search"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:text="Поиск"
            android:textColor="@color/black"
            android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/NameFilter"
        android:hint="Поиск по названию"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"/>

        <Button
            android:id="@+id/NameSearch"
            android:text="Поиск"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/IngFilter"
        android:hint="Поиск по ингредиентам"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"/>

        <Button
            android:id="@+id/IngSearch"
            android:text="Поиск"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <ListView
        android:id="@+id/List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>